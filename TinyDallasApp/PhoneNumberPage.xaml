<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TinyDallasApp.PhoneNumberPage"
             Title="PhoneNumberPage">
    <StackLayout Padding="20">
        <Label Text="Enter Phone Number:" FontAttributes="Bold" FontSize="Medium" />

        <Entry x:Name="PhoneNumberEntry" Placeholder="Example: 8008008000" Keyboard="Telephone" />

        <Button Text="Continue" Clicked="OnContinueClicked" />
    </StackLayout>
</ContentPage>